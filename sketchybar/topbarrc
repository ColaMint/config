SKETCHBAR_BIN="/opt/homebrew/bin/sketchy_topbar"

PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
ITEM_DIR="$HOME/.config/sketchybar/items"

PADDINGS=3

FONT="苹方-简"

$SKETCHBAR_BIN --bar height=50                                                     \
                     corner_radius=14                                              \
                     border_width=0                                                \
                     margin=95                                                     \
                     blur_radius=0                                                 \
                     position=top                                                  \
                     padding_left=4                                                \
                     padding_right=4                                               \
                     color=0xff1a1c26                                              \
                     topmost=off                                                   \
                     sticky=on                                                     \
                     font_smoothing=off                                            \
                     y_offset=-100                                                 \
                     notch_width=0                                                 \
                                                                                   \
           --default drawing=on                                                    \
                     updates=when_shown                                            \
                     icon.padding_left=$PADDINGS                                   \
                     icon.padding_right=$PADDINGS                                  \
                     label.padding_left=$PADDINGS                                  \
                     label.padding_right=$PADDINGS                                 \
                     background.padding_right=$PADDINGS                            \
                     background.padding_left=$PADDINGS                             \

$SKETCHBAR_BIN --animate sin 30 --bar y_offset=-100 y_offset=9

. "$ITEM_DIR/arch_menu.sh"
. "$ITEM_DIR/system.sh"
. "$ITEM_DIR/spaces.sh"
. "$ITEM_DIR/email.sh"
 
. "$ITEM_DIR/time.sh"
# . "$ITEM_DIR/sound.sh"     # sound
. "$ITEM_DIR/battery.sh"
# . "$ITEM_DIR/playing.sh"   # playing on spotify

# $SKETCHBAR_BIN --add alias 网易云音乐 right 
. "$ITEM_DIR/bluetooth.sh"
. "$ITEM_DIR/vpn.sh"
. "$ITEM_DIR/wifi.sh"


$SKETCHBAR_BIN --update
